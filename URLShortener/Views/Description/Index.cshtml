@model UrlShortener.Models.DescriptionModel?

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Algorithm Description</h2>
                </div>
                <div class="card-body">
                    <h3 class="card-title">@Model?.Title</h3>
                    <p class="card-text">
                       @Model?.Text
                    </p>
                </div>
            </div>
            <div class="mt-3 text-center">
                <p class="lead">Author:  @Model?.Author</p>
            </div>
        </div>
    </div>
</div>

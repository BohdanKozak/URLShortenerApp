@using URLShortener.Utility
@model UrlShortener.Models.DescriptionModel?

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Algorithm Description</h2>
                    <h3 class="text-center">@Model?.Title</h3>
                </div>
                <div class="card-body">
                    
                    <p class="card-text">
                       @Html.Raw( Model?.Text)
                    </p>
                </div>
            </div>
            <div class="mt-3 text-center">
                <p class="lead">Author:  @Model?.Author</p>
            </div>
            
            @if (User.IsInRole(SD.Role_Admin))
            {
                <div class="card">
                    <a asp-controller="Description" asp-action="Edit" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                </div>
            }

            

        </div>
    </div>
</div>
